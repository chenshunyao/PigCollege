<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.xnf.henghenghui"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:splitMotionEvents="false">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:splitMotionEvents="false">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/banner_height1">

                <com.xnf.henghenghui.ui.view.ChildViewPager
                    android:id="@+id/hot_pager"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

                <com.viewpagerindicator.CirclePageIndicator
                    android:id="@+id/hot_indicator"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="#00000000"
                    android:paddingBottom="10dip"
                    android:paddingTop="10dip"
                    app:fillColor="#FF3DFFEA"
                    app:pageColor="#FFFFFFFF"
                    app:radius="3dp"
                    app:strokeColor="#FF3DFFEA"
                    app:strokeWidth="0dp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/drive_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/layout_hengheng_qa"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="-5dp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/txt_henghenghui_qa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="17dp"
                        android:layout_marginTop="13dp"
                        android:gravity="center"
                        android:text="@string/henghenghui_qa"
                        android:textColor="@color/black"
                        android:textSize="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txt_henghenghui_qa"
                        android:layout_marginLeft="17dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="专家免费答疑"
                        android:textColor="@color/gray"
                        android:textSize="14dp" />

                    <ImageView
                        android:id="@+id/img_qa"
                        android:layout_width="54dp"
                        android:layout_height="40dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="13dp"
                        android:layout_toRightOf="@id/txt_henghenghui_qa"
                        android:src="@drawable/hengheng_qa" />

                    <TextView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_alignRight="@id/img_qa"
                        android:layout_alignTop="@id/img_qa"
                        android:layout_marginRight="-16dp"
                        android:layout_marginTop="-16dp"
                        android:background="@drawable/bg_index_red"
                        android:gravity="center"
                        android:text="22"
                        android:textColor="@color/white"
                        android:textSize="12dp"
                        android:visibility="gone" />


                </RelativeLayout>

                <ImageView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:scaleType="center"
                    android:background="@drawable/main_driver" />

                <RelativeLayout
                    android:id="@+id/layout_hengheng_course"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="-5dp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/txt_henghenghui_course"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="17dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="哼哼课堂"
                        android:textColor="@color/black"
                        android:textSize="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txt_henghenghui_course"
                        android:layout_marginLeft="17dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="养猪在线学习"
                        android:textColor="@color/gray"
                        android:textSize="14dp" />

                    <ImageView
                        android:id="@+id/img_course"
                        android:layout_width="40dp"
                        android:layout_height="36dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@id/txt_henghenghui_course"
                        android:src="@drawable/hengheng_course" />

                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignRight="@id/img_course"
                        android:layout_alignTop="@id/img_course"
                        android:layout_marginRight="-20dp"
                        android:layout_marginTop="-10dp"
                        android:background="@drawable/bg_index_red"
                        android:gravity="center"
                        android:text="22"
                        android:textColor="@color/white"
                        android:textSize="12dp" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/drive_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="82dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/layout_hengheng_meeting"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/img_huipin"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/layout_zhuanti_left"
                        android:layout_marginRight="3dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/hengheng_yzmeeting" />

                    <TextView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_alignRight="@id/img_huipin"
                        android:layout_alignTop="@id/img_huipin"
                        android:layout_marginRight="-16dp"
                        android:layout_marginTop="-6dp"
                        android:background="@drawable/bg_index_red"
                        android:gravity="center"
                        android:text="22"
                        android:textColor="@color/white"
                        android:textSize="12dp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/txt_meeting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@id/img_huipin"
                        android:gravity="center"
                        android:text="哼哼会评"
                        android:textColor="@color/black"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/txt_meeting_dsc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txt_meeting"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@id/img_huipin"
                        android:gravity="center"
                        android:text="会议解读"
                        android:textColor="@color/gray"
                        android:textSize="13dp" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:scaleType="center"
                    android:background="@drawable/main_driver" />

                <RelativeLayout
                    android:id="@+id/layout_hengheng_hot"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/img_hot"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/layout_zhuanti_left"
                        android:layout_marginRight="3dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/hengheng_hot" />

                    <TextView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_alignRight="@id/img_hot"
                        android:layout_alignTop="@id/img_hot"
                        android:layout_marginRight="-16dp"
                        android:layout_marginTop="-6dp"
                        android:background="@drawable/bg_index_red"
                        android:gravity="center"
                        android:text="22"
                        android:textColor="@color/white"
                        android:textSize="12dp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/txt_hot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@id/img_hot"
                        android:gravity="center"
                        android:text="哼哼热点"
                        android:textColor="@color/black"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txt_hot"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@id/img_hot"
                        android:gravity="center"
                        android:text="专题文章"
                        android:textColor="@color/gray"
                        android:textSize="13dp" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:scaleType="center"
                    android:background="@drawable/main_driver" />

                <RelativeLayout
                    android:id="@+id/layout_hengheng_baike"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/img_baike"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/layout_zhuanti_left"
                        android:layout_marginRight="3dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/hengheng_yzbaike" />

                    <TextView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_alignRight="@id/img_baike"
                        android:layout_alignTop="@id/img_baike"
                        android:layout_marginRight="-16dp"
                        android:layout_marginTop="-6dp"
                        android:background="@drawable/bg_index_red"
                        android:gravity="center"
                        android:text="22"
                        android:textColor="@color/white"
                        android:textSize="12dp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/txt_baike"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@id/img_baike"
                        android:gravity="center"
                        android:text="养猪百科"
                        android:textColor="@color/black"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txt_baike"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@id/img_baike"
                        android:gravity="center"
                        android:text="知识文库"
                        android:textColor="@color/gray"
                        android:textSize="13dp" />
                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/drive_color" />

            <View
                android:layout_width="match_parent"
                android:layout_height="7dp"
                android:background="@color/pure" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/drive_color" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/drive_color" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="43dp"
                android:background="#FFFFFF"
                android:paddingBottom="5dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="5dp"
                android:text="@string/main_hengheng_master"
                android:gravity="center_vertical"
                android:textSize="16dp"
                android:visibility="visible"
                android:id="@+id/textView6" />

            <com.xnf.henghenghui.ui.view.ChildRecyclerView
                android:id="@+id/view_master_horizontal"
                android:layout_width="match_parent"
                android:layout_height="116dp"
                android:layout_gravity="center"
                android:scrollbars="none"
                android:visibility="visible" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/drive_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="43dp"
                    android:background="#FFFFFF"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingBottom="5dp"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:paddingTop="5dp"
                        android:text="哼哼面对面"
                        android:textSize="16dp" />

                    <LinearLayout
                        android:id="@+id/mainpage_f2f_loadmore"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="5dp"
                            android:gravity="center_vertical"
                            android:paddingBottom="5dp"
                            android:paddingLeft="16dp"
                            android:paddingRight="0dp"
                            android:paddingTop="5dp"
                            android:text="更多"
                            android:textColor="@color/gray"
                            android:textSize="14dp" />

                        <ImageView
                            android:layout_width="11dp"
                            android:layout_height="15dp"
                            android:layout_centerInParent="true"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/course_expert_detail" />
                    </LinearLayout>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/drive_color" />

                <!--面对面-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!--专家面对面-->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="95dp"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/hot_label"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="37"
                            android:text="专家热点"
                            android:visibility="gone"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:textSize="16dp" />

                        <com.xnf.henghenghui.ui.view.ChildViewPager
                            android:id="@+id/f2f_expert_hot_viewpager"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="115"/>

                    </LinearLayout>

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/drive_color"
                        android:visibility="gone"/>

                    <!--话题广场-->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="110dp"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/topic_label"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="37"
                            android:text="互动话题"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:textSize="16dp" />

                        <com.xnf.henghenghui.ui.view.ChildViewPager
                            android:id="@+id/f2f_topic_hot_viewpager"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="115" />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/drive_color" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:background="#FFFFFF"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="#FFFFFF"
                    android:gravity="center_vertical"
                    android:paddingBottom="5dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="5dp"
                    android:text="热门文章"
                    android:textSize="16dp" />


                <LinearLayout
                    android:id="@+id/mainpage_hotarticle_loadmore"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="5dp"
                        android:gravity="center_vertical"
                        android:paddingBottom="5dp"
                        android:paddingLeft="16dp"
                        android:paddingRight="0dp"
                        android:paddingTop="5dp"
                        android:text="更多"
                        android:textColor="@color/gray"
                        android:textSize="14dp" />

                    <ImageView
                        android:layout_width="11dp"
                        android:layout_height="15dp"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/course_expert_detail" />
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/drive_color" />

                <LinearLayout
                    android:id="@+id/layout_remen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                </LinearLayout>
            <FrameLayout
                android:id="@+id/article_list"
                android:layout_width="fill_parent"
                android:layout_height="470dp"
                android:visibility="gone">

                <!--<include layout="@layout/fragment_loading" />-->

                <ListView
                    android:id="@+id/listview"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:divider="@color/pure" />
            </FrameLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>