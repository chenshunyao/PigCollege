<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/meeting_icon"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/meeting_icon_height"
            android:maxHeight="@dimen/meeting_icon_height"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/p1"/>
        <TextView
            android:id="@+id/meeting_status"
            android:layout_width="@dimen/meeting_status_width"
            android:layout_height="@dimen/meeting_status_height"
            android:layout_marginTop="7dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="right"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:background="@drawable/conference_status_1"
            android:textSize="@dimen/meeting_status_font_size"
            android:textColor="@color/white"
            android:text="直播中.."/>
    </FrameLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/white">
        <TextView
            android:id="@+id/meeting_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:textColor="#FF7F50"
            android:textSize="15sp"
            android:text="第二届健康养猪芙蓉论坛"
             />
        <TextView
            android:id="@+id/meeting_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/meeting_title"
            android:layout_alignLeft="@id/meeting_title"
            android:layout_marginTop="3dp"
            android:textSize="12sp"
            android:text="开始时间:2017-02-12"/>
        <TextView
            android:id="@+id/meeting_endtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/meeting_time"
            android:layout_alignLeft="@id/meeting_time"
            android:layout_marginTop="1dp"
            android:textSize="12sp"
            android:text="结束时间:2016-02-21"/>
        <TextView
            android:id="@+id/meeting_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/meeting_endtime"
            android:layout_alignLeft="@id/meeting_time"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="5dp"
            android:textSize="12sp"
            android:text="举行地点:北京"/>
        <!--<TextView
            android:id="@+id/meeting_attention"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/meeting_place"
            android:layout_alignTop="@id/meeting_place"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:gravity="right"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:text="关注(500)"/>-->
    </RelativeLayout>
</LinearLayout>