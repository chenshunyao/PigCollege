<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/my_participation_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:paddingLeft="29dp">
        <TextView
            android:id="@+id/my_participation_textview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="我参与的"
            android:textSize="16dp"
            android:textColor="#2f2f2f"
            android:gravity="center_vertical"/>
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="15dp"
            android:paddingLeft="5dp"
            android:layout_toRightOf="@id/my_participation_textview"
            android:src="@drawable/ease_unread_count_bg"/>
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon2right"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cccccc">
    </View>

</LinearLayout>
