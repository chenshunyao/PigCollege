<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#e6e6e6"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <include layout="@layout/layout_title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <EditText
            android:id="@+id/edit_qa_list_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="7dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/bg_title_edit"
            android:gravity="left|center_vertical"
            android:hint="请输入关键词搜索"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:imeOptions="actionSearch"
            android:maxLength="100"
            android:singleLine="true"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/img_qa_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:src="@drawable/search_icon" />
        <ImageView
            android:id="@+id/img_qa_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:padding="8dp"
            android:src="@drawable/ic_login_cancle_normal" />
    </RelativeLayout>

    <com.xnf.henghenghui.ui.widget.AutoLineGroup
        android:id="@+id/layout_keyword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="7dp"
        android:visibility="gone">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:paddingRight="2dp"
            android:textSize="12sp"
            android:textColor="@color/gray_808080"
            android:text="热门搜索"/>
    </com.xnf.henghenghui.ui.widget.AutoLineGroup>

    <LinearLayout
        android:id="@+id/layout_kword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="7dp"
        android:gravity="center_vertical"
        android:visibility="gone"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/gray_normal"
            android:text="热门搜索" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/layout_kword_0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/kword_0"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginLeft="4dp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textSize="12sp"
                    android:background="@drawable/kword_normal"
                    android:textColor="@color/gray_normal"
                    android:text="词语词语"/>
                <TextView
                    android:id="@+id/kword_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginLeft="4dp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textSize="12sp"
                    android:background="@drawable/kword_normal"
                    android:textColor="@color/gray_normal"
                    android:text="词语词语"/>
                <TextView
                    android:id="@+id/kword_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginLeft="4dp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textSize="12sp"
                    android:background="@drawable/kword_normal"
                    android:textColor="@color/gray_normal"
                    android:text="词语词语"/>
                <TextView
                    android:id="@+id/kword_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginLeft="4dp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textSize="12sp"
                    android:background="@drawable/kword_normal"
                    android:textColor="@color/gray_normal"
                    android:text="词语词语"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_kword_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/kword_4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginLeft="4dp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textSize="12sp"
                    android:background="@drawable/kword_normal"
                    android:textColor="@color/gray_normal"
                    android:text="词语词语"/>
                <TextView
                    android:id="@+id/kword_5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginLeft="4dp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textSize="12sp"
                    android:background="@drawable/kword_normal"
                    android:textColor="@color/gray_normal"
                    android:text="词语词语"/>
                <TextView
                    android:id="@+id/kword_6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginLeft="4dp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textSize="12sp"
                    android:background="@drawable/kword_normal"
                    android:textColor="@color/gray_normal"
                    android:text="词语词语"/>
                <TextView
                    android:id="@+id/kword_7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginLeft="4dp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textSize="12sp"
                    android:background="@drawable/kword_normal"
                    android:textColor="@color/gray_normal"
                    android:text="词语词语"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray_E0E0E0"/>

    <com.xnf.henghenghui.ui.view.PagerSlidingTabStrip
        android:id="@+id/pager_tabstrip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fafafa">
    </com.xnf.henghenghui.ui.view.PagerSlidingTabStrip>

    <View
        android:id="@+id/view_pager_line"
        android:layout_width="match_parent"
        android:layout_below="@id/pager_tabstrip"
        android:layout_height="1px"
        android:background="#E7E7E7" />

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/view_pager_line">
    </android.support.v4.view.ViewPager>

    <com.xnf.henghenghui.ui.view.EmptyLayout
        android:id="@+id/error_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />
</LinearLayout>