<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_expert_hot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left|center_vertical">

            <ImageView
                android:id="@+id/img_hot"
                android:layout_width="160dp"
                android:layout_height="85dp"
                android:padding="3dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/hot_label"
                android:scaleType="fitXY"
                android:src="@drawable/p2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical"
            android:gravity="left|center_vertical"
            android:layout_marginLeft="5dp">

            <TextView
                android:id="@+id/txt_expert_hot"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:layout_below="@id/hot_label"
                android:layout_centerHorizontal="true"
                android:gravity="center_vertical|left"
                android:maxLines="2"
                android:ellipsize="end"
                android:lineSpacingExtra="3dp"
                android:lineSpacingMultiplier="1.2"
                android:layout_marginTop="3dp"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/txt_hot_desc"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:layout_below="@id/txt_expert_hot"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@id/img_hot"
                android:gravity="center_vertical|left"
                android:text="参与人数10人"
                android:maxLines="1"
                android:textColor="@color/gray"
                android:textSize="13dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/course_expert_detail" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
