<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/master_layout"
    android:layout_width="86dp"
    android:layout_height="86dp">
    <ImageView
        android:id="@+id/inner_image"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/course_more_normal"
        />
    <ImageView
        android:id="@+id/inner_delete"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:background="@drawable/icon_qa_img_delete"
        android:layout_marginRight="-5dp"
        android:layout_marginTop="-5dp"
        android:layout_alignRight="@+id/inner_image"
        android:layout_alignTop="@+id/inner_image" />
</RelativeLayout>
