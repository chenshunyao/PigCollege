<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/master_layout"
    android:layout_width="84dp"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingLeft="6dp"
    android:paddingRight="6dp"
	android:orientation="vertical"
	android:gravity="center_horizontal">
	<RelativeLayout
		android:layout_width="wrap_content"
		android:layout_height="66dp">

		<com.xnf.henghenghui.ui.view.RoundImageView
			android:id="@+id/inner_image"
			android:layout_width="64dp"
			android:layout_height="64dp"
			android:src="@drawable/shouyi2"
			android:scaleType="fitXY"
			android:layout_centerHorizontal="true"
			/>
		<ImageView
			android:id="@+id/inner_sign"
			android:layout_width="20dp"
			android:layout_height="20dp"
			android:background="@drawable/master_sign"
			android:layout_alignRight="@+id/inner_image"
			android:layout_alignBottom="@+id/inner_image" />
	</RelativeLayout>

    <TextView 
        android:id="@+id/inner_name"
        android:layout_width="80dp"
	    android:layout_height="wrap_content"
	    android:layout_centerHorizontal="true"
	    android:textSize="12sp"
        android:gravity="center"
	    android:maxLines="1"
	    android:ellipsize="end"
		android:text="姚老师"
        android:paddingTop="2dp"
        />
    <TextView
        android:id="@+id/inner_duty"
        android:layout_width="80dp"
	    android:layout_height="wrap_content"
	    android:layout_centerHorizontal="true"
        android:gravity="center"
        android:paddingTop="2dp"
	    android:textSize="10sp"
		android:text="业务主管"
	    android:textColor="@color/gray"
        />
</LinearLayout>
