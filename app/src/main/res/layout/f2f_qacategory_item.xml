<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/master_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
	android:layout_marginTop="5dp"
	android:layout_marginBottom="5dp"
	android:orientation="horizontal">

	<LinearLayout
		android:layout_width="0dp"
		android:layout_weight="1.6"
		android:layout_height="60dp"
		android:paddingLeft="5dp"
		android:gravity="center_vertical">
		<ImageView
			android:id="@+id/qa_category_icon"
			android:layout_width="45dp"
			android:layout_height="45dp"
            android:src="@drawable/f2f_list_icon"
            android:layout_gravity="center"/>
	</LinearLayout>

	<LinearLayout
		android:layout_width="0dp"
		android:layout_weight="9"
		android:layout_height="60dp"
		android:orientation="vertical">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="6"
			android:orientation="horizontal">
			<TextView
				android:id="@+id/qa_categoryname_textview"
				android:layout_height="match_parent"
				android:layout_width="0dp"
				android:layout_weight="8"
				android:layout_marginLeft="10dp"
				android:textColor="#2f2f2f"
				android:textSize="19.2dp"
				android:text="种猪"
				android:ellipsize="end"
				android:gravity="center_vertical"
				android:maxLines="1"/>


		</LinearLayout>


		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="5"
			android:orientation="horizontal">
			<TextView
				android:id="@+id/qa_category_desc_textview"
				android:layout_width="0dp"
				android:layout_weight="8"
				android:layout_height="match_parent"
				android:maxLines="1"
				android:layout_marginLeft="10dp"
				android:textSize="14.4dp"
				android:textColor="#636363"
				android:ellipsize="end"
				android:gravity="center_vertical"/>

			<TextView
				android:id="@+id/qa_num_textview"
				android:layout_width="0dp"
				android:layout_weight="3"
				android:layout_height="match_parent"
				android:maxLines="1"
				android:text="100"
				android:paddingLeft="10dp"
				android:textSize="14.4dp"
				android:textColor="#636363"
				android:gravity="center_vertical"/>
		</LinearLayout>

        <View
		android:layout_width="match_parent"
		android:layout_height="0.5dp"
		android:background="#cccccc"/>
	</LinearLayout>

</LinearLayout>
