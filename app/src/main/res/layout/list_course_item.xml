<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp">
        <ImageView
            android:layout_width="123dp"
            android:layout_height="88dp"
            android:id="@+id/course_icon"
            android:scaleType="fitXY"
            android:src="@drawable/p6"/>
        <RelativeLayout
            android:id="@+id/course_desc"
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:layout_toRightOf="@id/course_icon"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            >
            <TextView
                android:id="@+id/course_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"
                android:textSize="15sp"
                android:textStyle="normal"
                android:text="怎样饲养小猪"/>
            <TextView
                android:id="@+id/course_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/course_title"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="20dp"
                android:textSize="10sp"
                android:text="50分钟"/>
            <TextView
                android:id="@+id/course_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="35dp"
                android:paddingRight="10dp"
                android:gravity="right"
                android:layout_alignTop="@id/course_duration"
                android:layout_toRightOf="@id/course_duration"
                android:layout_below="@id/course_title"
                android:textSize="10sp"
                android:textColor="@color/red"
                android:text="$10"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_below="@id/course_desc"
            android:layout_toRightOf="@id/course_icon"
            android:background="#DEDEDE"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/course_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:textSize="10sp"
            android:textColor="#A3A3A3"
            android:text="播放 2500次"/>
        <TextView
            android:id="@+id/course_zhan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="165dp"
            android:textSize="10sp"
            android:textColor="#A6A6A6"
            android:text="赞(100)"/>
        <TextView
            android:id="@+id/course_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textSize="10sp"
            android:textColor="#A6A6A6"
            android:text="评论(500)"/>
        <LinearLayout
            android:id="@+id/view_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:gravity="right"
            android:clickable="true">
<!--            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:text="@string/course_view"/>-->
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="2dp"
                android:layout_gravity="right"
                android:src="@drawable/course_view" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>