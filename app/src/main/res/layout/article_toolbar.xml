<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_top_settingbar_layout"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/main_top_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/top_bar_background"
        android:orientation="horizontal"
        android:visibility="visible">

        <TextView
            android:id="@+id/back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:paddingLeft="20dp"
            android:gravity="center_vertical|left"
            android:text="@string/str_txt_signin"
            android:textColor="#11ab19"
            android:visibility="invisible"
            android:textSize="12.8dp"/>

        <TextView
            android:id="@+id/main_top_ll_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/setting_person"
            android:textSize="16dp"
            android:textColor="#2c2c2c"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center_vertical|right">
            <ImageView
                android:id="@+id/setting_btn"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:paddingRight="10dp"
                android:gravity="center_vertical|right"
                android:src="@drawable/settings_btn" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>