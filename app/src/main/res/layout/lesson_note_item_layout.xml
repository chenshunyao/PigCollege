<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="125dp"
    android:padding="5dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/lesson_note_image"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginTop="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/news" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/lesson_note_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:maxLines="1"
                    android:textStyle="bold"
                    android:text="这是一个测试永利是返回卡萨丁韩粉市府大路"
                    android:textSize="15dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/lesson_note_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:maxLines="2"
                android:lineSpacingExtra="3dp"
                android:lineSpacingMultiplier="1.3"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:text="这发挥发生符合第三方打开过或收到货合第三方打开过合第三方打开过合第三方打开过合第三方打开过规定时间广东省合法化估计快了耗时点格式关键是读后感教室的开了个会适当卡号公司电话萨克雷 "
                android:textColor="@color/gray"
                android:textSize="14dp" />


        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="90dp"
        android:background="@color/pure"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <View
            android:layout_width="86dp"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/lesson_note_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:maxLines="1"
            android:gravity="left|center_vertical"
            android:text="2016年11月20日 11:53:29"
            android:textColor="@color/gray"
            android:textSize="12dp" />

        <!--<TextView
            android:id="@+id/lesson_note_author"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:maxLines="1"
            android:gravity="right|center_vertical"
            android:text="18627975339"
            android:textColor="@color/gray"
            android:textSize="12dp" />-->
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="1dp"
        android:background="@color/pure"></View>

</LinearLayout>