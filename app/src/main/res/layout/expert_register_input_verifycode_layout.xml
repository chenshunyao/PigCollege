<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/expert_input_verifycode_layout"
    android:background="#e6e6e6"
    android:visibility="gone"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_verify_code_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="已经发送验证码至您的手机"
        android:gravity="center_horizontal"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_white_aaaaaa">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_password"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="验证码"
                android:textColor="#353535"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_verifiCode"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignLeft="@id/tv_password"
                android:layout_centerVertical="true"
                android:background="@drawable/bg_edittext"
                android:hint="输入验证码"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:numeric="integer"
                android:maxLength="6"
                android:textColorHint="#DDDDDD"
                android:textSize="16sp" />
        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/btn_reget_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:text="收到短信大约需要60ms"
        android:gravity="center_horizontal"/>

    <Button
        android:id="@+id/btn_summit_verifycode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/btn_register_bg"
        android:paddingBottom="7dp"
        android:paddingTop="7dp"
        android:text="提交"
        android:textColor="@android:color/white"
        android:textSize="18sp" />
</LinearLayout>
