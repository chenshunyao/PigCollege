<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.xnf.henghenghui"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:splitMotionEvents="false">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:splitMotionEvents="false">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="108dp">

                <com.xnf.henghenghui.ui.view.ChildViewPager
                    android:id="@+id/hot_pager"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" />

                <com.viewpagerindicator.CirclePageIndicator
                    android:id="@+id/hot_indicator"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="#00000000"
                    android:paddingBottom="10dip"
                    android:paddingTop="10dip"
                    app:fillColor="#FF3DFFEA"
                    app:pageColor="#FFFFFFFF"
                    app:radius="3dp"
                    app:strokeColor="#FF3DFFEA"
                    app:strokeWidth="0dp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/drive_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/layout_hengheng_qa"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/txt_henghenghui_qa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="17dp"
                        android:layout_marginTop="13dp"
                        android:gravity="center"
                        android:text="在线提问"
                        android:textColor="@color/black"
                        android:textSize="17dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txt_henghenghui_qa"
                        android:layout_marginLeft="17dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="专家免费答疑"
                        android:textColor="@color/black"
                        android:textSize="14dp" />

                    <ImageView
                        android:id="@+id/img_qa"
                        android:layout_width="54dp"
                        android:layout_height="40dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="13dp"
                        android:layout_toRightOf="@id/txt_henghenghui_qa"
                        android:src="@drawable/hengheng_qa" />

                    <TextView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_alignRight="@id/img_qa"
                        android:layout_alignTop="@id/img_qa"
                        android:layout_marginRight="-16dp"
                        android:layout_marginTop="-6dp"
                        android:background="@drawable/bg_index_red"
                        android:gravity="center"
                        android:text="22"
                        android:textColor="@color/white"
                        android:visibility="gone"
                        android:textSize="12dp" />


                </RelativeLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/drive_color" />

                <RelativeLayout
                    android:id="@+id/layout_hengheng_course"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/txt_henghenghui_course"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="17dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="哼哼课堂"
                        android:textColor="@color/black"
                        android:textSize="17dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txt_henghenghui_course"
                        android:layout_marginLeft="17dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="养猪在线学习"
                        android:textColor="@color/black"
                        android:textSize="14dp" />

                    <ImageView
                        android:id="@+id/img_course"
                        android:layout_width="54dp"
                        android:layout_height="50dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@id/txt_henghenghui_course"
                        android:src="@drawable/hengheng_course" />

                    <TextView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_alignRight="@id/img_course"
                        android:layout_alignTop="@id/img_course"
                        android:layout_marginRight="-16dp"
                        android:layout_marginTop="3dp"
                        android:background="@drawable/bg_index_red"
                        android:gravity="center"
                        android:text="22"
                        android:textColor="@color/white"
                        android:textSize="12dp" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/drive_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="82dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/layout_hengheng_meeting"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/img_huipin"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="3dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/hengheng_yzmeeting" />

                    <TextView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_alignRight="@id/img_huipin"
                        android:layout_alignTop="@id/img_huipin"
                        android:layout_marginRight="-16dp"
                        android:layout_marginTop="-6dp"
                        android:background="@drawable/bg_index_red"
                        android:gravity="center"
                        android:text="22"
                        android:textColor="@color/white"
                        android:textSize="12dp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/txt_meeting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@id/img_huipin"
                        android:gravity="center"
                        android:text="哼哼会评"
                        android:textColor="@color/black"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/txt_meeting_dsc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txt_meeting"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="6dp"
                        android:layout_toRightOf="@id/img_huipin"
                        android:gravity="center"
                        android:text="哼哼会评"
                        android:textColor="@color/black"
                        android:textSize="13dp" />
                </RelativeLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/drive_color" />

                <RelativeLayout
                    android:id="@+id/layout_hengheng_hot"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/img_hot"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="3dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/hengheng_hot" />

                    <TextView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_alignRight="@id/img_hot"
                        android:layout_alignTop="@id/img_hot"
                        android:layout_marginRight="-16dp"
                        android:layout_marginTop="-6dp"
                        android:background="@drawable/bg_index_red"
                        android:gravity="center"
                        android:text="22"
                        android:textColor="@color/white"
                        android:textSize="12dp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/txt_hot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@id/img_hot"
                        android:gravity="center"
                        android:text="哼哼热点"
                        android:textColor="@color/black"
                        android:textSize="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txt_hot"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="6dp"
                        android:layout_toRightOf="@id/img_hot"
                        android:gravity="center"
                        android:text="专题文章"
                        android:textColor="@color/black"
                        android:textSize="13dp" />
                </RelativeLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/drive_color" />

                <RelativeLayout
                    android:id="@+id/layout_hengheng_baike"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/img_baike"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="3dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/hengheng_yzbaike" />

                    <TextView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_alignRight="@id/img_baike"
                        android:layout_alignTop="@id/img_baike"
                        android:layout_marginRight="-16dp"
                        android:layout_marginTop="-6dp"
                        android:background="@drawable/bg_index_red"
                        android:gravity="center"
                        android:text="22"
                        android:textColor="@color/white"
                        android:textSize="12dp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/txt_baike"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@id/img_baike"
                        android:gravity="center"
                        android:text="养猪百科"
                        android:textColor="@color/black"
                        android:textSize="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txt_baike"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="6dp"
                        android:layout_toRightOf="@id/img_baike"
                        android:gravity="center"
                        android:text="知识文库"
                        android:textColor="@color/black"
                        android:textSize="13dp" />
                </RelativeLayout>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/drive_color" />
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/pure" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/drive_color" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:paddingBottom="5dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="5dp"
                android:text="@string/main_hengheng_master"
                android:visibility="visible"
                android:textSize="16dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/drive_color" />

            <com.xnf.henghenghui.ui.view.ChildRecyclerView
                android:id="@+id/view_master_horizontal"
                android:layout_width="match_parent"
                android:layout_height="116dp"
                android:layout_gravity="center"
                android:scrollbars="none"
                android:visibility="visible" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/drive_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:background="#FFFFFF"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:paddingBottom="5dp"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:paddingTop="5dp"
                        android:gravity="center_vertical"
                        android:text="哼哼面对面"
                        android:textSize="16dp" />

                    <LinearLayout
                        android:id="@+id/mainpage_f2f_loadmore"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_alignParentRight="true">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:paddingBottom="5dp"
                            android:paddingLeft="16dp"
                            android:paddingRight="0dp"
                            android:paddingTop="5dp"
                            android:layout_marginRight="5dp"
                            android:gravity="center_vertical"
                            android:text="更多"
                            android:textSize="14dp"
                            />
                        <ImageView
                            android:layout_width="13dp"
                            android:layout_height="15dp"
                            android:layout_marginRight="10dp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/course_expert_detail" />
                    </LinearLayout>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/drive_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="110dp"
                        android:layout_weight="1">
                        <RelativeLayout
                            android:id="@+id/layout_expert_hot"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:paddingTop="5dp"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/expert_hot_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18dp"
                                android:text="专家热点"/>
                            <ImageView
                                android:id="@+id/img_expert_hot"
                                android:layout_width="70dp"
                                android:layout_height="45dp"
                                android:layout_centerVertical="true"
                                android:layout_below="@id/expert_hot_label"
                                android:layout_marginRight="3dp"
                                android:layout_marginTop="8dp"
                                android:src="@drawable/p2" />

                            <TextView
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:layout_alignRight="@id/img_expert_hot"
                                android:layout_alignTop="@id/img_expert_hot"
                                android:layout_marginRight="-16dp"
                                android:layout_marginTop="-6dp"
                                android:background="@drawable/bg_index_red"
                                android:gravity="center"
                                android:text="22"
                                android:textColor="@color/white"
                                android:textSize="12dp"
                                android:visibility="gone" />

                            <TextView
                                android:id="@+id/txt_expert_hot"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="10dp"
                                android:layout_below="@id/expert_hot_label"
                                android:layout_toRightOf="@id/img_expert_hot"
                                android:gravity="center"
                                android:text="#伢猪饲养#"
                                android:textColor="@color/black"
                                android:textSize="16dp" />

                            <TextView
                                android:id="@+id/txt_expert_hot_desc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/txt_expert_hot"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="6dp"
                                android:layout_toRightOf="@id/img_expert_hot"
                                android:gravity="center"
                                android:text="参与人数10人"
                                android:textColor="@color/black"
                                android:textSize="13dp" />

                            <ImageView
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:layout_marginLeft="5dp"
                                android:layout_below="@id/txt_expert_hot"
                                android:background="@drawable/course_expert_detail"
                                android:layout_toRightOf="@id/txt_expert_hot_desc"/>
                        </RelativeLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/drive_color"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="110dp"
                        android:layout_weight="1">
                        <RelativeLayout
                            android:id="@+id/layout_f2f"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:paddingTop="5dp"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/f2f_hot_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18dp"
                                android:text="互动热点"/>
                            <ImageView
                                android:id="@+id/img_f2f_hot"
                                android:layout_width="70dp"
                                android:layout_height="45dp"
                                android:layout_centerVertical="true"
                                android:layout_below="@id/f2f_hot_label"
                                android:layout_marginRight="3dp"
                                android:layout_marginTop="8dp"
                                android:src="@drawable/p1" />

                            <TextView
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:layout_alignRight="@id/img_f2f_hot"
                                android:layout_alignTop="@id/img_f2f_hot"
                                android:layout_marginRight="-16dp"
                                android:layout_marginTop="-6dp"
                                android:background="@drawable/bg_index_red"
                                android:gravity="center"
                                android:text="22"
                                android:textColor="@color/white"
                                android:textSize="12dp"
                                android:visibility="gone" />

                            <TextView
                                android:id="@+id/txt_f2f_hot"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="10dp"
                                android:layout_below="@id/f2f_hot_label"
                                android:layout_toRightOf="@id/img_f2f_hot"
                                android:gravity="center"
                                android:text="流行性腹泻"
                                android:textColor="@color/black"
                                android:textSize="16dp" />

                            <TextView
                                android:id="@+id/txt_f2f_hot_desc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/txt_f2f_hot"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="6dp"
                                android:layout_toRightOf="@id/img_f2f_hot"
                                android:gravity="center"
                                android:text="参与人数10人"
                                android:textColor="@color/black"
                                android:textSize="13dp" />
                            <ImageView
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:layout_marginLeft="5dp"
                                android:layout_below="@id/txt_f2f_hot"
                                android:background="@drawable/course_expert_detail"
                                android:layout_toRightOf="@id/txt_f2f_hot_desc"/>
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/drive_color" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:background="#FFFFFF"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="#FFFFFF"
                    android:paddingBottom="5dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="5dp"
                    android:gravity="center_vertical"
                    android:text="热门文章"
                    android:textSize="16dp" />



                <ImageView
                    android:id="@+id/mainpage_hot_loadmore"
                    android:layout_width="13dp"
                    android:layout_height="15dp"
                    android:layout_marginRight="10dp"
                    android:layout_centerInParent="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/course_expert_detail" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingBottom="5dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="5dp"
                    android:layout_marginRight="12dp"
                    android:gravity="center_vertical"
                    android:text="更多"
                    android:textSize="14dp"
                    android:layout_alignParentRight="true"
                    android:layout_toLeftOf="@+id/mainpage_hot_loadmore"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/drive_color" />
            <LinearLayout
                android:id="@+id/layout_remen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>